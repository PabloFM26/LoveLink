<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GenderOptionStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/gender_unselected</item>
        <item name="android:background">@drawable/gender_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="GenderOptionStyleMagenta">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/gender_unselected</item>
        <item name="android:background">@drawable/gender_selected_magenta</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#8E24AA</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>


</resources>
