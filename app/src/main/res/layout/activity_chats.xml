<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_900">

    <!-- Texto centrado (ahora justo encima de la barra) -->
    <TextView
        android:id="@+id/chatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tus conversaciones aparecerán aquí 💬"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bottomNavigation"
        android:layout_marginBottom="32dp" />

    <!-- Barra de navegación inferior fija sin padding ni margen -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/magenta_500"
        android:weightSum="4"
        android:gravity="center"
        android:padding="0dp">

        <Button
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="🏠"
            android:textSize="20sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/nav_matches"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="💘"
            android:textSize="20sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/nav_chats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="💬"
            android:textSize="20sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="👤"
            android:textSize="20sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>
